<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DEF5FF">

    <ImageView
        android:id="@+id/mbtilogo"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginBottom="400dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/mbti_logo"/>


    <TextView
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="120dp"
        android:id="@+id/Q7"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginBottom="300dp"
        android:text="다음 중 내가 \n 더 자주 사용하는 말은?"
        android:gravity="center"
        android:textAlignment="center"
        android:textStyle="bold"
        android:fontFamily="@font/mbti_question"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/Q7A1"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/mbti_question"
        android:text="아니...! \n 현실적으로 좀 생각하라고!"
        android:textAlignment="center"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/Q7A2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Q7"
        android:textSize="20dp"
        android:clickable="true"
        android:background="@drawable/select_text"
        android:elevation="20dp"
        android:textColor="@drawable/text_click"/>

    <TextView
        android:id="@+id/Q7A2"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/mbti_question"
        android:text="아니...! \n 상상 좀 해봐!"
        android:textAlignment="center"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Q7A1"
        android:textSize="20dp"
        android:clickable="true"
        android:background="@drawable/select_text"
        android:elevation="20dp"
        android:textColor="@drawable/text_click"/>


</androidx.constraintlayout.widget.ConstraintLayout>